<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TinyKit.Pages.TextGenerator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TinyKit.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Expander">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Background" Value="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" />
        </Style>
    </Page.Resources>


    <Grid>
        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel
                Margin="50,20,50,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Orientation="Vertical"
                Spacing="10">
                <Expander Header="生成基于时间的 Commit 信息" IsExpanded="True">
                    <Expander.Content>
                        <StackPanel
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Spacing="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical"
                                    Spacing="10">


                                    <Grid Grid.Column="0" HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="5" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="5" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Spacing="5">
                                            <ComboBox
                                                HorizontalAlignment="Stretch"
                                                Header="日期"
                                                ItemsSource="{x:Bind viewModel.Date}"
                                                SelectedIndex="{x:Bind viewModel.DateIndex, Mode=TwoWay}" />
                                            <CheckBox IsChecked="{x:Bind viewModel.Ddd, Mode=TwoWay}">
                                                <CheckBox.Content>
                                                    <TextBlock Text="ddd" />
                                                </CheckBox.Content>
                                            </CheckBox>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Spacing="5">
                                            <ComboBox
                                                HorizontalAlignment="Stretch"
                                                Header="分隔符"
                                                ItemsSource="{x:Bind viewModel.Separator}"
                                                SelectedIndex="{x:Bind viewModel.SeparatorIndex, Mode=TwoWay}" />
                                            <CheckBox
                                                Checked="{x:Bind viewModel.HasTt}"
                                                IsChecked="{x:Bind viewModel.Tt, Mode=TwoWay}"
                                                Unchecked="{x:Bind viewModel.HasNoTt}">
                                                <CheckBox.Content>
                                                    <TextBlock Text="tt" />
                                                </CheckBox.Content>
                                            </CheckBox>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4" Spacing="5">
                                            <ComboBox
                                                HorizontalAlignment="Stretch"
                                                Header="时间"
                                                ItemsSource="{x:Bind viewModel.Time}"
                                                SelectedIndex="{x:Bind viewModel.TimeIndex, Mode=TwoWay}"
                                                SelectionChanged="{x:Bind viewModel.SelectTimeIndex}" />
                                            <CheckBox IsChecked="{x:Bind viewModel.ShortDate, Mode=TwoWay}">
                                                <CheckBox.Content>
                                                    <TextBlock Text="短日期" />
                                                </CheckBox.Content>
                                            </CheckBox>

                                        </StackPanel>
                                    </Grid>

                                </StackPanel>

                                <StackPanel
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Button Click="{x:Bind viewModel.GenerateCommittedStr}">
                                            生成
                                        </Button>
                                        <Button Click="{x:Bind viewModel.CopyCommittedStr}">
                                            复制
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                            </Grid>

                            <InfoBar
                                Title="{x:Bind viewModel.InfoBarInstance.Title, Mode=OneWay}"
                                CloseButtonClick="{x:Bind viewModel.CloseInfoBarInstance}"
                                IsOpen="{x:Bind viewModel.InfoBarInstance.IsOpen, Mode=OneWay}"
                                Message="{x:Bind viewModel.InfoBarInstance.Message, Mode=OneWay}"
                                Severity="{x:Bind viewModel.InfoBarInstance.Severity, Mode=OneWay}"
                                Visibility="{x:Bind viewModel.InfoBarInstance.InfoBarVisibility, Mode=OneWay}" />
                        </StackPanel>
                    </Expander.Content>
                </Expander>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
