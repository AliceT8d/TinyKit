<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="TinyKit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TinyKit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TinyKit"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar
            Title="TinyKit"
            IsBackButtonVisible="False"
            IsPaneToggleButtonVisible="False"
            Subtitle="in developing">
            <!--<TitleBar.IconSource>
                <ImageIconSource ImageSource="/bilibili_64x64.ico" />
            </TitleBar.IconSource>-->
            <TitleBar.Content>
                <AutoSuggestBox
                    Width="360"
                    VerticalAlignment="Center"
                    CornerRadius="16"
                    PlaceholderText="Search.."
                    QueryIcon="Find" />
            </TitleBar.Content>
            <TitleBar.RightHeader>
                <PersonPicture
                    Width="30"
                    Height="30"
                    Initials="AT" />
            </TitleBar.RightHeader>
        </TitleBar>

        <NavigationView
            x:Name="MainWindowNavigationView"
            Grid.Row="1"
            MinWidth="100"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="True"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            Loaded="MainWindowNavigationViewLoaded"
            ItemInvoked="NavigationViewItemInvoked"
            OpenPaneLength="300"
            PaneDisplayMode="Left">

            <NavigationView.PaneCustomContent>
                <Border Margin="4,55,4,45" CornerRadius="5">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="15">
                        <Image
                            Width="40"
                            Height="40"
                            Source="/bilibili_64x64.ico" />
                        <StackPanel
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Orientation="Vertical">
                            <TextBlock>Tiny Kit</TextBlock>
                            <TextBlock FontSize="12">developed by AliceT8d</TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </NavigationView.PaneCustomContent>

            <NavigationView.Header>
                <TextBlock>Header</TextBlock>
            </NavigationView.Header>

            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Name="NavigationViewItem_TestPage"
                    Margin="10,0,10,0"
                    Content="TestPage"
                    Tag="NavigationViewItemTag_TestPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEA86;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem
                    x:Name="NavigationViewItem_TextGeneratorPage"
                    Margin="10,0,10,0"
                    Content="TextGenerator"
                    Tag="NavigationViewItemTag_TextGeneratorPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEF60;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem
                    x:Name="NavigationViewItem_SettingsPage"
                    Margin="10,0,10,0"
                    Content="SettingsPage"
                    Tag="NavigationViewItemTag_SettingsPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE713;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame x:Name="NavigationViewFrame_ContentFrame" />
        </NavigationView>
    </Grid>
</Window>
